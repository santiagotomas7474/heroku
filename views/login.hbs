<head>
    <link rel="stylesheet" type="text/css" href="css/cssTwo.css">
</head>
{{>nav}}
<article class="fondo">
<div class="container mt-5 text-white">
    <div class="row">
        <form class="container col-6 bg-dark py-4 col-11 col-md-8 col-lg-6" action="login" method="POST">
            <div class="mb-3">
                <label for="mail" class="form-label">Email</label>
                <input name="mail" type="email" class="form-control" id="mail">

            </div>
            <div class="mb-3">
                <label for="pass" class="form-label">Constraseña</label>
                <input name="pass" type="password" class="form-control" id="pass" autocomplete="current-password">
            </div>

            
            {{#if message}}
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                    class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
                    aria-label="Warning:">
                    <path
                        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div>
                    {{message}}
                </div>
            </div>
            {{/if}}
            <button type="submit" class="btn btn-primary ">Submit</button>
            <button type="button" class="btn btn-outline-light me-2"</button><a class="none" href="contra">Olvide la Constraseña</a></button>
        </form>
    </div>
</article>
